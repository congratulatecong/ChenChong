<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    android:orientation="vertical">

    <include layout="@layout/layout_navigation_bar"/>

    <com.cong.chenchong.widget.CommonRippleButton
        android:id="@+id/btn_ripple"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="#fff"
        android:text="Ripple Click"/>

    <com.cong.chenchong.widget.RippleView
        android:id="@+id/layout_ripple"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="#bbb"
        app:rv_centered="true"
        app:rv_type="doubleRipple">

        <ImageView
            android:id="@+id/img_ripple_btn1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="center"
            android:src="@drawable/icon_github"/>
    </com.cong.chenchong.widget.RippleView>

    <com.cong.chenchong.widget.RippleView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:background="#ccc"
        android:gravity="center"
        app:rv_centered="true"
        app:rv_type="simpleRipple">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"/>
    </com.cong.chenchong.widget.RippleView>

</LinearLayout>