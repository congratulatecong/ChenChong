<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#cccccc"
              android:gravity="bottom"
              android:orientation="vertical">

    <com.cong.chenchong.widget.RollingDownload.RollingDownloadViewGroup
        android:id="@+id/vg_rolling_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:bg_color="@color/colorPrimary"
        app:cancel_icon="@drawable/ic_close"
        app:continue_icon="@drawable/ic_play"
        app:left_loading_speed="2500"
        app:progress_color="#ccc"
        app:right_loading_speed="8"
        app:status_text_color="#fff"
        app:stop_icon="@drawable/ic_stop"/>

</LinearLayout>