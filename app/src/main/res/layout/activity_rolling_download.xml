<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#cccccc"
              android:gravity="bottom"
              android:orientation="vertical">

    <com.cong.chenchong.widget.RollingDownload.RollingSquareView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:fix_round_corner="5"
        app:half_rect_width="15dp"
        app:is_clockwise="false"
        app:line_count="3"
        app:rect_divider_width="8dp"
        app:roll_interpolator="@android:anim/bounce_interpolator"
        app:roll_round_corner="5"
        app:roll_speed="500"
        app:square_color="@color/color_primary"
        app:start_empty_position="3"/>

    <com.cong.chenchong.widget.RollingDownload.RollingDownloadViewGroup
        android:id="@+id/vg_rolling_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"/>

</LinearLayout>